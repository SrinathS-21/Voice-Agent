# ===========================================
# Voice Agent - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your API keys

# -----------------
# Deepgram (Voice Agent) - REQUIRED
# -----------------
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# -----------------
# Twilio (Phone Calls)
# -----------------
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------
# WebSocket Server
# -----------------
# Use ngrok URL for local development
WEBSOCKET_URL=wss://your-subdomain.ngrok-free.dev

# -----------------
# Convex (Database & RAG) - REQUIRED
# -----------------
CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_DEPLOY_KEY=prod:your-deployment|your_deploy_key_here

# -----------------
# OpenAI (Embeddings for RAG) - REQUIRED
# -----------------
# Used by Convex RAG for text-embedding-3-small
OPENAI_API_KEY=sk-your_openai_api_key_here

# -----------------
# Groq (LLM for Voice Agent) - REQUIRED
# -----------------
# Powers the voice agent's language model (Llama)
GROQ_API_KEY=gsk-your_groq_api_key_here

# -----------------
# LlamaParse (Document Parsing)
# -----------------
# For parsing PDFs and documents into text
LLAMA_CLOUD_API_KEY=llx-your_llamaparse_api_key_here
