# ===========================================
# Voice Agent Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -----------------
# Deepgram (Voice AI)
# -----------------
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# -----------------
# Google Gemini (LLM)
# -----------------
GEMINI_API_KEY=your_gemini_api_key_here

# -----------------
# Database (Optional - for local persistence)
# -----------------
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/voiceagent_db

# -----------------
# Twilio (Phone Calls)
# -----------------
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------
# WebSocket Server
# -----------------
# Use ngrok URL for local development: wss://your-subdomain.ngrok-free.dev
WEBSOCKET_URL=wss://your-ngrok-url.ngrok-free.dev

# -----------------
# Convex (Backend Database)
# -----------------
CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_DEPLOY_KEY=prod:your-deployment|your_deploy_key_here
USE_CONVEX=true

# -----------------
# LlamaParse (Document Parsing)
# -----------------
LLAMA_CLOUD_API_KEY=llx-your_llamaparse_api_key_here

# -----------------
# Hugging Face (Embeddings)
# -----------------
# Used for BGE-M3 embeddings (1024 dimensions)
HF_TOKEN=hf_your_huggingface_token_here

# -----------------
# OpenAI (Optional - Alternative LLM/TTS)
# -----------------
OPENAI_API_KEY=sk-your_openai_api_key_here

# -----------------
# Groq (Optional - Alternative LLM)
# -----------------
GROQ_API_KEY=gsk_your_groq_api_key_here
